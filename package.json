{
  "name": "web-components",
  "version": "1.0.0",
  "description": "Web components for creating quick homepages",
  "repository": "git@github.com:michaelketzer/web-components.git",
  "author": "Michael Ketzer",
  "license": "MIT",
  "dependencies": {
    "@bit/bit.envs.compilers.react-typescript": "3.1.70",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-sort-keys-shorthand": "^2.1.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "styled-components": "^5.2.1",
    "stylelint": "^13.12.0",
    "stylelint-config-recommended": "^4.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.10.0",
    "typescript": "^4.2.3"
  },
  "scripts": {
    "lint": "yarn lint:eslint && yarn lint:css && yarn tsc",
    "lint:eslint": "eslint --ext .js,.ts,.tsx ./",
    "lint:eslint:fix": "eslint --fix ./",
    "lint:css": "stylelint '**/*.{ts,tsx}'"
  },
  "peerDependencies": {
    "classnames": "^2.2.6",
    "prop-types": "^15.7.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "bit": {
    "env": {
      "compiler": "bit.envs/compilers/react-typescript@3.1.70"
    },
    "componentsDefaultDirectory": "components/{name}",
    "packageManager": "npm"
  },
  "devDependencies": {
    "@types/classnames": "^2.2.11",
    "@types/prop-types": "^15.7.3",
    "@types/styled-components": "^5.1.7"
  }
}
